<div class="col-md-8">
<%= form_for @list do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<%= f.label :items %>
<div class="groceryItem">
  <div class="form-group">
    <%= check_box_tag 'purchased1' %>
    <%= text_field_tag 'item1', nil, placeholder: " item 1" %>
    <%= text_field_tag 'amount1', nil, placeholder: " amount 1" %>
  </div>
</div>

<%# ^Three field items: checkbox, name, amount %>

<button type="button" onclick="addItem()">Add Item</button>
<%= hidden_field_tag 'nItems', 1 %>

<%# ^The fanciness. A button that runs a function that lives in lists.js and a hidden field that holds a number. %>

<div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
</div>
<% end %>
</div>